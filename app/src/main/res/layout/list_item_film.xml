<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/list_cardview_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8F8">
            <ImageView
                android:id="@+id/imgFilm"
                android:layout_width="@dimen/list_img_layout_width"
                android:layout_height="@dimen/list_img_layout_height"
                android:layout_marginStart="@dimen/list_img_layout_marginStart"
                android:layout_marginTop="@dimen/list_img_layout_marginTop"
                android:layout_marginBottom="@dimen/list_img_layout_marginBottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_textviev_layout_marginStart"
                android:layout_marginTop="@dimen/list_textviev_layout_marginTop"
                android:text="Film Adı"
                app:layout_constraintStart_toEndOf="@+id/imgFilm"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtFilmAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_filmadi_layout_marginTop"
                android:text="FilmAdi"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_textviev3_layout_marginTop"
                android:text="Vizyona Giriş Tarihi"
                app:layout_constraintStart_toStartOf="@+id/txtFilmAdi"
                app:layout_constraintTop_toBottomOf="@+id/txtFilmAdi" />

            <TextView
                android:id="@+id/txtVizyonTarihi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_textviev3_layout_marginTop"
                android:text="'11.12.2021"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
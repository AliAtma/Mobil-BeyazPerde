<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InfoActivity"
    android:background="@color/info">
    <ImageView
        android:id="@+id/imgFilm2"
        android:layout_width="@dimen/info_img_layout_width"
        android:layout_height="@dimen/info_img_layout_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/txtFilmBaslik"
        android:layout_width="@dimen/info_baslik_layout_width"
        android:layout_height="@dimen/info_baslik_layout_height"
        android:layout_marginTop="@dimen/info_baslik_layout_marginTop"
        android:text="TextBaslik"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFilm2" />

    <TextView
        android:id="@+id/txtFilmAciklama"
        android:layout_width="@dimen/info_aciklama_layout_width"
        android:layout_height="@dimen/info_aciklama_layout_height"
        android:layout_marginTop="@dimen/info_aciklama_layout_marginTop"
        android:text="TextFilmAciklama"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFilmBaslik" />

</androidx.constraintlayout.widget.ConstraintLayout>